
<h2 class="text-2xl font-bold text-center text-gray-800 mb-6">Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "max-w-md mx-auto bg-white p-6 rounded-lg shadow-md") do |f| %>
  <div class="mb-4">
    <%= f.label :email, class: "block text-gray-700 font-semibold mb-1" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-[hsl(0,83%,56%)]" %>
  </div>

  <div class="mb-4">
    <%= f.label :password, class: "block text-gray-700 font-semibold mb-1" %>
    <%= f.password_field :password, autocomplete: "current-password", class: "w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-[hsl(0,83%,56%)]" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="mb-4 flex items-center">
      <%= f.check_box :remember_me, class: "mr-2 accent-[hsl(0,83%,56%)]" %>
      <%= f.label :remember_me, class: "text-gray-700 font-medium" %>
    </div>
  <% end %>

  <div class="mt-6">
    <%= f.submit "Log in", class: "w-full bg-[hsl(0,83%,56%)] text-white py-2 px-4 rounded-md hover:bg-[hsl(0,83%,46%)] transition" %>
  </div>
<% end %>

<div class="mt-4 text-center">
  <%= render "devise/shared/links" %>
</div>


