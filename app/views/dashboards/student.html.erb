<div class="space-y-8">
  <!-- Student Courses -->
  <div class="bg-white p-6 rounded-xl shadow-sm">
    <div class="flex justify-between items-center mb-6">
      <h2 class="text-2xl font-semibold">My Courses</h2>
      <%= link_to "Browse Courses", courses_path, class: "text-[hsl(0_83%_56.1%)] hover:text-[hsl(0_83%_46%)]" %>
    </div>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% current_user.courses.each do |course| %>
        <div class="border border-gray-200 rounded-lg p-4 hover:shadow-md transition">
          <h3 class="font-semibold text-lg"><%= course.name %></h3>
          <div class="mt-2 h-2 bg-gray-200 rounded-full">
            <div class="h-full bg-[hsl(0_83%_56.1%)] rounded-full" style="width: <%= course.progress %>%"></div>
          </div>
          <p class="text-sm text-gray-600 mt-2"><%= course.teacher %></p>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Student Financial Overview -->
  <div class="bg-white p-6 rounded-xl shadow-sm">
    <h2 class="text-2xl font-semibold mb-4">Financial Summary</h2>
    <div class="grid grid-cols-2 gap-4">
      <div class="p-4 bg-gray-50 rounded-lg">
        <p class="text-gray-600">Total Paid</p>
        <p class="text-2xl font-bold text-[hsl(0_83%_56.1%)]">$<%= current_user.total_paid %></p>
      </div>
      <div class="p-4 bg-gray-50 rounded-lg">
        <p class="text-gray-600">Pending Payments</p>
        <p class="text-2xl font-bold text-red-600">$<%= current_user.pending_payments %></p>
      </div>
    </div>
  </div>
</div>