<div class="w-screen">
  <!-- Header -->
<header class="w-full bg-[hsl(0_83%_56.1%)] text-white shadow-md fixed top-0 left-0 z-50">
  <nav class="max-w-7xl mx-auto px-6 py-4 flex justify-between items-center w-full">
    <h1 class="text-2xl font-bold">EduManage</h1>
    <div class="flex items-center space-x-6">
      <%= link_to "Features", "#features", class: "hover:bg-[hsl(0_83%_46%)] px-4 py-2 rounded transition-colors duration-200" %>
      <div class="flex items-center space-x-4">
        <% if user_signed_in? %>
          <%= link_to "Dashboard", dashboard_path, class: "hover:bg-[hsl(0_83%_46%)] px-4 py-2 rounded transition-colors duration-200" %>
        <% else %>
          <%= link_to "Login", new_user_session_path, class: "hover:bg-[hsl(0_83%_46%)] px-4 py-2 rounded transition-colors duration-200" %>
          <%= link_to "Sign Up", new_user_registration_path, 
                     class: "bg-white/10 hover:bg-white/20 px-4 py-2 rounded transition-colors duration-200 border border-white/20" %>
        <% end %>
      </div>
    </div>
  </nav>
</header>

  <!-- Hero Section -->
<!-- Hero Section -->
<section class="w-full min-h-screen flex items-center bg-gray-50 relative pt-16">
  <!-- Content Container -->
  <div class="container mx-auto px-6 flex flex-col lg:flex-row items-center justify-between">
    <!-- Left Content -->
    <div class="lg:w-1/2 text-left mb-12 lg:mb-0 animate-fade-in-up">
      <h1 class="text-4xl md:text-6xl font-bold mb-6 text-gray-900 leading-tight">
        Transform Your School 
        <span class="text-[hsl(0_83%_56.1%)]">Management</span>
      </h1>
      <p class="text-lg md:text-xl text-gray-600 mb-8 max-w-xl">
        Streamline academic operations with our all-in-one solution for course management, 
        financial tracking, and real-time communication.
      </p>
      <div class="flex flex-col sm:flex-row gap-4">
        <% if user_signed_in? %>
          <%= link_to "Go to Dashboard", dashboard_path, 
              class: "bg-[hsl(0_83%_56.1%)] hover:bg-[hsl(0_83%_46%)] text-white px-8 py-4 rounded-lg text-lg font-semibold transition transform hover:scale-105" %>
        <% else %>
          <%= link_to "Get Started Free", new_user_registration_path, 
              class: "bg-[hsl(0_83%_56.1%)] hover:bg-[hsl(0_83%_46%)] text-white px-8 py-4 rounded-lg text-lg font-semibold transition transform hover:scale-105" %>
          <%= link_to "Learn More", "#features", 
              class: "border-2 border-[hsl(0_83%_56.1%)] text-[hsl(0_83%_56.1%)] hover:bg-[hsl(0_83%_56.1%)] hover:text-white px-8 py-4 rounded-lg text-lg font-semibold transition transform hover:scale-105" %>
        <% end %>
      </div>
    </div>

    <!-- Right Image with Animation -->
    <div class="lg:w-1/2 relative z-10 animate-float">
      <div class="relative max-w-xl lg:max-w-none mx-auto">
        <div class="absolute inset-0 bg-gradient-to-r from-[hsl(0_83%_56.1%)] to-[hsl(0_83%_70%)] rounded-2xl transform rotate-6 blur-xl opacity-20"></div>
        <div class="relative rounded-2xl overflow-hidden shadow-2xl">
          <%= image_tag 'hero-image.jpeg', class: "w-full h-auto", alt: "School Management Interface" %>
          <!-- You can replace with actual image -->
          <div class="absolute inset-0 bg-gradient-to-t from-gray-900/30 to-transparent"></div>
        </div>
      </div>
    </div>
  </div>
</section>

  <!-- Features Section -->
  <section class="py-20 w-full" id="features">
    <div class="container mx-auto px-6 grid grid-cols-1 md:grid-cols-3 gap-10">
      <div class="bg-white p-8 rounded-lg shadow-md text-center">
        <div class="text-[hsl(0_83%_56.1%)] text-5xl mb-4">
          <i class="fas fa-book-open"></i>
        </div>
        <h3 class="text-2xl font-semibold mb-3">Course Management</h3>
        <p class="text-gray-600">Manage academic courses and curriculum efficiently</p>
      </div>
      
      <div class="bg-white p-8 rounded-lg shadow-md text-center">
        <div class="text-[hsl(0_83%_56.1%)] text-5xl mb-4">
          <i class="fas fa-bullhorn"></i>
        </div>
        <h3 class="text-2xl font-semibold mb-3">Announcements</h3>
        <p class="text-gray-600">Real-time notifications and updates system</p>
      </div>

      <div class="bg-white p-8 rounded-lg shadow-md text-center">
        <div class="text-[hsl(0_83%_56.1%)] text-5xl mb-4">
          <i class="fas fa-chart-line"></i>
        </div>
        <h3 class="text-2xl font-semibold mb-3">Financial Tracking</h3>
        <p class="text-gray-600">Comprehensive financial management system</p>
      </div>
    </div>
  </section>
</div>
