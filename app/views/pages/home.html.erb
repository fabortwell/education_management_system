<!-- Subscribe Section -->
<section class="bg-[hsl(0_83%_56.1%)] py-20">
  <div class="container mx-auto px-6 text-center">
    <div class="max-w-2xl mx-auto">
      <h2 class="text-4xl font-bold text-white mb-6">
        Start Your Digital Transformation
      </h2>
      <p class="text-white/90 text-xl mb-8">
        Get updates and educational resources delivered to your inbox
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <%= form_with url: "#", class: "w-full sm:w-96", local: true do |form| %>
          <div class="flex gap-2 bg-white rounded-lg p-2">
            <%= form.email_field :email, 
                  class: "flex-1 rounded-lg px-6 py-4 border-0 focus:ring-0 text-gray-900",
                  placeholder: "Enter your email" %>
            <%= form.submit "Subscribe", 
                  class: "bg-[hsl(0_83%_56.1%)] text-white px-8 py-4 rounded-lg font-semibold cursor-pointer hover:bg-[hsl(0_83%_46%)] transition" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>

